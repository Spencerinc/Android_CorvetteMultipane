<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/titles"
        class="com.spencerwebsitedesign.fragmentlayouts.TitlesFragment"
        android:layout_weight="1"/>

    <FrameLayout
        android:id="@+id/details"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="?android:attr/detailsElementBackground"
        android:layout_weight="3" />

<!-- The total layout_weights above: 1+3=4. So that means that the first fragment will
take up 1/4th of the screen and the bottom FrameLayout will take up 3/4 of the screen. -->

</LinearLayout>
